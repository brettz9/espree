{
  "compilerOptions": {
    "lib": ["es2020"],
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "outFile": "dist/espree.d.ts"
  },
  "include": ["espree.js", "lib/**/*.js"],
  "exclude": ["node_modules"]
}
